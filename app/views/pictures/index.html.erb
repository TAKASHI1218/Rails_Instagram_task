<p id="notice"><%= notice %></p>

  <h1 class="panel panel-default">Pictures</h1>

  <h2 div class="btn-group newpicture">
    <button type="button" class="btn btn-info"><%= link_to '投稿する', new_picture_path %></button></h2>
<table>
  <thead class="container">
    <tr class="row">
      <th class="col-md-4">Image</th>
      <th class="col-md-3">Message</th>
      <th class="col-md-2">User Name</th>
      <th class="col-md-3">Function</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="container">
    <% @pictures.each do |picture| %>
      <tr class="row well well-lg">
        <td class="col-md-5"><%= image_tag picture.image.url %></td>
        <td class="col-md-4 alert-danger"><%= picture.content %></td>
        <td class="col-md-1.75 alert-info"><%= picture.user.name %></td>
        <td>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">
              <%= link_to '詳細', picture %></button>

          <% if picture.user_id == current_user.id %>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">
              <%= link_to '編集', edit_picture_path(picture) %></button>
          <% else %>
          <% end %>

          <% if picture.user_id == current_user.id %>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">
              <%= link_to '削除', picture, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          <% else %>
          <% end %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
